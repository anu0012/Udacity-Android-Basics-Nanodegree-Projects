<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anuragsharma.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".all_songs"
            android:label="All Songs"/>
        <activity android:name=".playlist"
            android:label="Playlists"/>
        <activity android:name=".album"
            android:label="Albums"/>
        <activity android:name=".genre"
            android:label="Genres"/>
        <activity android:name=".now_playing"
            android:label="Now Playing"/>
    </application>

</manifest>
